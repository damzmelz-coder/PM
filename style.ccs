body {
  font-family: Arial, sans-serif;
  margin: 20px;
}
h1, h2, h3 {
  color: #2c3e50;
}
form div {
  margin-bottom: 10px;
}
select, input, textarea {
  width: 100%;
  padding: 5px;
}
button {
  padding: 10px;
  background-color: #3498db;
  color: white;
  border: none;
  cursor: pointer;
}
button:hover {
  background-color: #2980b9;
}
